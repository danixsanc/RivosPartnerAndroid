<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:fillViewport="false"
        android:id="@+id/df">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#ffffff">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="#ff435d6f"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/rc_text"
                    android:text="Datos Personales"
                    android:id="@+id/txt_datos_personales" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="Activado"/>

                    <Switch
                        android:id="@+id/sw_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Desctivado"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp"
                android:background="#ffffff">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#576c95"
                    android:textSize="15dp"
                    android:drawablePadding="10dp"
                    android:drawableTint="#576c95"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:text="Nombre"
                    android:id="@+id/txt_nombre" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#121748"
                    android:textSize="16dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/rc_text"
                    android:text="NOMBRE"
                    android:id="@+id/txt_nombre_user" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:textColor="#ff435d6f"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@android:drawable/divider_horizontal_textfield"
                    android:id="@+id/textView1s0" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#576c95"
                    android:drawablePadding="10dp"
                    android:textSize="15dp"
                    android:drawableTint="#576c95"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:drawableLeft="@drawable/ic_email_black_24dp"
                    android:text="Correo"
                    android:id="@+id/txt_email" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#121748"
                    android:textSize="16dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/rc_text"
                    android:text="CORREO"
                    android:id="@+id/txt_email_user" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:textColor="#ff435d6f"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@android:drawable/divider_horizontal_textfield"
                    android:id="@+id/textViasdew1s0" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#576c95"
                    android:textSize="15dp"
                    android:drawablePadding="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:drawableTint="#576c95"
                    android:drawableLeft="@drawable/ic_phone_black_24dp"
                    android:text="Telefono"
                    android:id="@+id/txt_phone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#121748"
                    android:textSize="16dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/rc_text"
                    android:text="TELEFONO"
                    android:id="@+id/txt_phone_user" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:textColor="#ff435d6f"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@android:drawable/divider_horizontal_textfield"
                    android:id="@+id/textViasdsdfew1s0" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>