<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fb="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:layout_margin="48dp"
        android:weightSum="1">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/logo"
            android:id="@+id/ic_launcher"
            android:layout_gravity="center_horizontal" />


        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo"
            android:textSize="16dp"
            android:background="#00ffffff"
            android:id="@+id/loginEmail"
            android:inputType="textEmailAddress"
            app:met_clearButton="true"
            app:met_floatingLabel="highlight"
            app:met_textColorHint="#6e6e6e"
            app:met_baseColor="#6e6e6e"
            app:met_primaryColor="@color/textColorPrimary"
            app:met_errorColor="#6e6e6e"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            android:textSize="16dp"
            android:background="#00ffffff"
            android:id="@+id/loginPassword"
            android:inputType="textPassword"
            app:met_clearButton="true"
            app:met_floatingLabel="highlight"
            app:met_textColorHint="#6e6e6e"
            app:met_baseColor="#6e6e6e"
            app:met_primaryColor="@color/textColorPrimary"
            app:met_errorColor="#6e6e6e"/>




        <Button
            android:id="@+id/btnOlvidePass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ababab"
            android:textSize="16dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:autoLink="web"
            android:textAllCaps="false"
            android:onClick="resetpass"
            android:text="Olvidaste tu contraseña?" />


        <TextView
            android:id="@+id/login_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffff8d80"
            android:typeface="sans"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium" />


            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:background="@color/colorAccent"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:text="Iniciar" />

    </LinearLayout>
</ScrollView>